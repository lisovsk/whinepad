{
  "name": "whinepad",
  "version": "2.0.0",
  "babel": {
    "presets": ["es2015", "react"]
  },
  "scripts": {
    "watch": "watch \"sh scripts/build.sh\" js/source css/"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "eslint": "^4.5.0",
    "eslint-plugin-babel": "^4.1.2",
    "eslint-plugin-react": "^7.3.0"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "plugins": ["babel", "react"],
    "extends": "eslint:recommended",
    "env": {
      "browser": true
    },
    "rules": {
      "comma-dangle": [2, "always-multiline"],
      "react/jsx-uses -react": 1
    }
  }
}
